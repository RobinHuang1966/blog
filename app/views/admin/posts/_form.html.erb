<%= semantic_form_for [:admin,@post] do |f| %>

    <%= f.inputs :name => "Basic" do %>
        <%= f.input :name,   :input_html => { :size => 10 } %>
        <%= f.input :title,  :input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 20  }  %>
        <%= f.input :content, :hint =>"Example: ruby, rails, forms"%>
    <% end %>

    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
    <% end %>
    <!--learn Formtastic,visit:https://github.com/justinfrench/formtastic -->

<% end %>